<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="80sp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/txv_folder_name"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/text_margin_itemlist"
        android:layout_weight="1"
        tools:text="de la vida en su tragedia comedia y ficcion" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txv_folder_content_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin_itemlist"
            android:gravity="center_vertical"
            android:text="@string/text_files_count" />

        <TextView
            android:id="@+id/txv_folder_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin_itemlist"
            android:gravity="center_vertical" />

    </LinearLayout>

</LinearLayout>
