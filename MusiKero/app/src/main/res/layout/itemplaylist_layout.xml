<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40sp"
    android:layout_margin="@dimen/text_margin_itemlist"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txv_playlist_name"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/text_margin_itemlist"
        android:layout_weight="1"
        android:text="playlist name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txv_playlist_content_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_files_count" />

        <TextView
            android:id="@+id/txv_playlist_duration"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/text_margin_itemlist"
            android:text="playlist duration" />

    </LinearLayout>
</LinearLayout>
