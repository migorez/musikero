<layer-play_item_list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#b1bbe8"></solid>
            <corners android:radius="8dp"></corners>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#ffdcc73c"></solid>
                <corners android:radius="8dp"></corners>
            </shape>
        </clip>
    </item>
</layer-play_item_list>